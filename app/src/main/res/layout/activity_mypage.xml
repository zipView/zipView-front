<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="프로필"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="140dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginRight="35dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingTop="5dp"
            android:background="@drawable/setup" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/lightIvory">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/my_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/profile"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="닉네임"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdf@naver.com"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingLeft="60dp"
                    android:layout_marginTop="20dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/my_review"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="나의 후기"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_gray1"/>
                    <LinearLayout
                        android:layout_width="1.34dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/line"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/my_comment"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="나의 댓글"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_gray2" />
                    <LinearLayout
                        android:layout_width="1.34dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/line"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/my_like"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="원한 후기"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_gray3"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My 정보"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/heart"/>
                <TextView
                    android:id="@+id/setup_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="관심 키워드 설정하기"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/edit_info"/>
                <TextView
                    android:id="@+id/edit_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내 정보 수정하기"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/padlock"/>
                <TextView
                    android:id="@+id/edit_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 변경하기"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.34dp"
                android:orientation="vertical"
                android:background="@drawable/line"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ring"/>
                <TextView
                    android:id="@+id/notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/question"/>
                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="자주 묻는 질문"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/communication"/>
                <TextView
                    android:id="@+id/send_opinion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="의견 보내기"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>